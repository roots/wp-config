{
  "name": "roots/wp-config",
  "description": "Collect configuration values and safely define() them",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Austin Pray",
      "email": "austin@austinpray.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Roots\\WPConfig\\": "src"
    }
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "laravel/pint": "^1.13",
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^7.5",
    "php-coveralls/php-coveralls": "^2.2"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.0.x-dev"
    }
  },
  "scripts": {
    "lint": "pint --test",
    "lint:fix": "pint"
  }
}