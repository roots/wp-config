{
  "name": "roots/wp-config",
  "description": "Fluent configuration management for WordPress",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "roots.dev",
      "email": "team@roots.dev"
    }
  ],
  "autoload": {
    "psr-4": {
      "Roots\\WPConfig\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Roots\\WPConfig\\Tests\\": "tests"
    }
  },
  "require": {
    "php": ">=8.1",
    "vlucas/phpdotenv": "^5.6"
  },
  "require-dev": {
    "laravel/pint": "^1.13",
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "test": "phpunit",
    "lint": "pint --test",
    "lint:fix": "pint"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
